<%= form_for( @user) do |f| %>
<%= f.email_field :email, placeholder: "Email", value: @user.email %><br />
<%= f.text_field :username, placeholder: "Username", value: @user.username %><br />
<%= f.password_field :password, placeholder: "Password" %><br />
<%= f.password_field :password_confirmation, placeholder: "Confirm Password" %><br />
<%= f.submit "Submit" %>
<% end %>